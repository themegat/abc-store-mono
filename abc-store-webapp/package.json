{
  "name": "abc-store-webapp",
  "version": "0.0.1",
  "description": "Starter kit for modern web applications",
  "homepage": "https://abc-store-webapp-377697024091.europe-west1.run.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/themegat/abc-store-mono"
  },
  "type": "module",
  "author": "T Motsoeneng",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "https-preview": "serve dist",
    "prepare": "husky install && cp -n env/.shared .env &",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint:check": "eslint --max-warnings=0 \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "ts:check": "tsc --noEmit",
    "test:unit": "vitest src",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "get-api-schema": "curl -k https://localhost:7198/openapi/v1.json -o openapi-schema.json",
    "remove-api-schema": "rm -rf openapi-schema.json",
    "gen:api": "npm run get-api-schema && npx @rtk-query/codegen-openapi openapi-config.cjs && npm run remove-api-schema"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@firebase-ui/core": "https://github.com/firebase/firebaseui-web/raw/refs/heads/v7-alpha/releases/firebase-ui-core-0.0.1.tgz",
    "@firebase-ui/react": "https://github.com/firebase/firebaseui-web/raw/refs/heads/v7-alpha/releases/firebase-ui-react-0.0.1.tgz",
    "@firebase-ui/styles": "https://github.com/firebase/firebaseui-web/raw/refs/heads/v7-alpha/releases/firebase-ui-styles-0.0.1.tgz",
    "@firebase-ui/translations": "https://github.com/firebase/firebaseui-web/raw/refs/heads/v7-alpha/releases/firebase-ui-translations-0.0.1.tgz",
    "@mui/icons-material": "^6.4.6",
    "@mui/material": "^6.4.6",
    "@toolpad/core": "^0.12.1",
    "firebase": "^11.10.0",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jotai": "^2.12.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.65.0",
    "react-hotkeys-hook": "^4.6.1",
    "react-i18next": "^16.2.1",
    "react-number-format": "^5.4.4",
    "react-redux": "^9.2.0",
    "react-router": "^7.2.0",
    "react-slick": "^0.31.0",
    "slick-carousel": "^1.8.1",
    "tinycolor2": "^1.6.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.50.1",
    "@reduxjs/toolkit": "^2.9.2",
    "@rtk-query/codegen-openapi": "^2.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-slick": "^0.23.13",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.3.4",
    "ajv": "^8.17.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "https-localhost": "^4.7.1",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "redux-devtools-extension": "^2.13.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.0.7"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --max-warnings=0"
    ]
  },
  "keywords": [
    "react",
    "pwa",
    "starter-kit",
    "vite"
  ]
}
