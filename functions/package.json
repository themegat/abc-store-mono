{
  "name": "functions",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start  --import ./emulator-data --only functions,storage --inspect-functions=9229",
    "shell": "npm run build && firebase functions:shell",
    "save": "rm -rf emulator-data && firebase emulators:export ./emulator-data && mv firebase-export-* emulator-data",
    "start": "npm run shell",
    "rename-firebase-export": "rm -rf emulator-data && mv firebase-export-* emulator-data",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.12.2",
    "file-type": "^21.0.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}
