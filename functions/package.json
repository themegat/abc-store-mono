{
  "name": "functions",
  "type": "module",
  "scripts": {
    "lint": "eslint -c eslint.config.ts --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start  --import ./emulator-data --only functions,storage --inspect-functions=9229",
    "shell": "npm run build && firebase functions:shell",
    "save": "rm -rf emulator-data && firebase emulators:export ./emulator-data && mv firebase-export-* emulator-data",
    "start": "npm run shell",
    "rename-firebase-export": "rm -rf emulator-data && mv firebase-export-* emulator-data",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.12.2",
    "file-type": "^21.0.0",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "globals": "^16.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.2"
  },
  "private": true
}
