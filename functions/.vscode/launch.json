{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Functions",
            "port": 9229,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "preLaunchTask": "serve:functions",
            "postDebugTask": "terminate:functions",
        }
    ]
}