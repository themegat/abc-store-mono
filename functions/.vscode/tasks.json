{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve:functions",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "serve"
            ],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "firebase",
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting emulators:",
                    "endsPattern": "All emulators ready!"
                }
            },
            "detail": "Start the app in development mode"
        },
        {
            "label": "terminate:functions",
            "type": "process",
            "command": "${command:workbench.action.tasks.terminate}",
            "problemMatcher": []
        }
    ]
}