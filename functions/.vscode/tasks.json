{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve:functions",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "firebase",
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting emulators:",
                    "endsPattern": "All emulators ready!"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "detail": "Start the app in development mode"
        },
        {
            "label": "terminate:functions",
            "type": "shell",
            "command": "${input:terminate} && sleep 4 && npm run rename-firebase-export",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "firebase:export",
            "type": "process",
            "command": "firebase",
            "args": [
                "emulators:export",
                "./emulator-data",
                "--only",
                "auth,storage,functions",
                "--force"
            ]
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "serve:functions"
        }
    ]
}