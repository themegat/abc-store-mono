    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0/ABCStoreAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "uriFormat": "%s/openapi/v1.json",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "CONNECTION_STRING": "",
                "EXCHANGE_RATE_API_KEY": "",
                "FIREBASE_PROJECT_ID": "",
                "FIREBASE_FUNCTION_URL": "http://127.0.0.1:5001/abc-store-cf711/us-central1",
                "ALLOWED_ORIGINS": "http://localhost:5173",
                "BUILD_VERSION": "develop",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}